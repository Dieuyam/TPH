<div class="container-accomodations">
  <%= render 'layouts/notification'%>
  <% @offers.each do |offer| %>
  <div class="container-login100">
    <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
      <br>
      <div class="login100-form validate-form">
        <span class="login100-form-title p-b-37">
          <%= offer.name %>

        </span>
        <br><br>
        <div class="text-center">
          <p><%= offer.description %></p>
          <p><%= offer.end_date %></p>
          <p><%= offer.price %>â‚¬</p>
        </div>
        <% case %>
        <% when current_user.offer_id == offer.id %>
        <div class="container-login100-form-btn text-center">
          <a class="btnGreen">Votre Offre</a>
        </div>
        <% when current_user.offer_id != offer.id %>
        <div class="container-login100-form-btn text-center">
          <%= link_to "S'abonner", new_offer_path(@user, :offer_id => offer.id ), class:'btnStandard' %>
        </div>
        <% end %>
        <br><br>
      </div>
    </div>
  </div><br><br>
  <% end %>
  <div class="text-center">
    <div class="dme_link">
      <%= link_to 'Retour', root_path, class:'btn1' %>
    </div>
  </div>
</div>
