<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Name</th>
      <th>End date</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.description %></td>
        <td><%= offer.name %></td>
        <td><%= offer.end_date %></td>
        <td><%= offer.price %></td>
        <td><%= link_to 'Pay', new_offer_path(@offers, :offer_id => offer.id ) %></td>
    <% end %>
  </tbody>

  <%= link_to 'Back', offers_path, class:'btn1' %>

</table>

<br>

