<div class="container-accomodations">
  <div class="text-center">
    <h2><% content_for :title, "Contact" %></h2>
  </div>
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-form validate-form">

        <!------ Include the above in your HEAD tag ---------->
        <br>
        <div class="container contact-form">
          <div class="text-center">
            <h3>Laissez nous un message</h3><br>
          </div><br>
          <%= form_tag contact_index_path, method: "post", multipart: true do %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Nom" aria-label="Name" aria-describedby="basic-addon1">
              </div>
              <div class="form-group">
                <input type="text" name="email" class="form-control" placeholder="Email" aria-label="Nom" aria-describedby="basic-addon1">
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <input name="phone" class="form-control" placeholder="Votre numÃ©ro">
                </div><br>
              </div>
              <div class="form-group">
                <textarea name="message" class="form-control" placeholder="Votre Message *" style="width: 100%; height: 150px;"></textarea>
              </div>
            </div><br>
          </div><br>

          <div class="text-center">
            <input type="submit" name="btnSubmit" class="btnStandard" value="Envoyer" />
          </div><br>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
