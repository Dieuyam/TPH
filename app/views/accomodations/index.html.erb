<p id="notice"><%= notice %></p>

<h1>Accomodations</h1>

<table>
  <thead>
    <tr>
      <th>Road number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accomodations.each do |accomodation| %>
      <tr>
        <td><%= accomodation.road_number %></td>
        <td><%= link_to 'Show', accomodation %></td>
        <td><%= link_to 'Edit', edit_accomodation_path(accomodation) %></td>
        <td><%= link_to 'Destroy', accomodation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

