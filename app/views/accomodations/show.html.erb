<div class="container">
  <div class="container-accomodations">
    <div class="container-carousel">

      <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active">
            <img class="d-block img-fluid" src="https://theperfecthouse.s3.eu-west-3.amazonaws.com/jesse-roberts-561igiTyvSk-unsplash.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="https://theperfecthouse.s3.eu-west-3.amazonaws.com/outsite-co-R-LK3sqLiBw-unsplash.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="https://theperfecthouse.s3.eu-west-3.amazonaws.com/alberto-castillo-q-mx4mSkK9zeo-unsplash.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <br>

    <div class="card-body">
      <h5 class="card-title">Titre</h5>
      <p class="card-text"><%= @accomodation.title %></p> <br>
      <h5 class="card-title">Description</h5>
      <p class="card-text"><%= @accomodation.description %></p><br>
      <h5 class="card-title">Adresse</h5>
      <p class="card-text"><%= @accomodation.road_number %>, <%= @road_type %>  <%= @accomodation.road_name %> , <%= @accomodation.zipcode %>, <%= @city %> </p><br>
      <p class="card-text"><small class="text-muted">Mis Ã  jour le <%= @accomodation.updated_at.to_formatted_s(:short) %></small></p>
      <td><%= link_to 'Modifier', edit_accomodation_path(@accomodation) %></td>
      <td><%= link_to 'Supprimer', @accomodation, method: :delete, data: { confirm: 'Are you sure?' }, class:'btnDelete' %>
    </div>

    <br>
    <hr>
    <h5 class="card-title">Photos</h5>
    <div class="row">
      <%if @accomodation.photo.attached?%>
        <% @accomodation.photo.each_with_index do |photo,index| %>
          <%= image_tag @accomodation.photo[index], alt: 'photo', width:"150", height:"150" %>
        <% end %>
      <%else%>
        <img src="/assets/outsite-co-R-LK3sqLiBw-unsplash.jpg" width="250" height="150">
      <%end%>
      <div class="col-md-12">
        <div class="row">
          <%= file_field_tag :photo %>
          <%= submit_tag "Ajouter" %>
        </div>
      </div>
      <div class="">
        <%= form_tag accomodation_photo_index_path(@accomodation), multipart: true do %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to 'Modifier', edit_accomodation_path(@accomodation) %> |
  <%= link_to 'Retour', accomodations_path %>
</div>
