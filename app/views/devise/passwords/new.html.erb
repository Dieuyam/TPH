<div class="container-accomodations">
  <%= render 'layouts/notification'%>
  <div class="container-login100">
    <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
      <br>
      <div class="login100-form validate-form">
        <span class="login100-form-title p-b-37">
          Mot de passe oublié ?
        </span>
        <br><br>
        <div class="text-center">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email %><br>
              <%= f.email_field :email, autofocus: true, class:'form-control', autocomplete: "email", placeholder:'Veuillez saisir votre email utilisateur' %>
            </div><br>

            <div class="actions">
              <%= f.submit "Réinitialiser mon mot de passe", class:'btnStandard' %>
            </div><br>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
        <br>
    </div>
  </div>
</div>
